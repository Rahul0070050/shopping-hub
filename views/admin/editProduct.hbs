<div class="add-product-container container-fluid">
    <div class="row">
        <div class="col-md-6 my-coll">
            <div class="my-sec">
                <div class="heading d-flex justify-content-between">
                    <h2><strong>SHOPPING HUB</strong></h2>
                    <h2><strong>EDIT THE PRODUCT</strong></h2>
                </div>
            </div>
            <form>
                <div class="my-sec">
                    <div class="form-row">
                        <div class="form-group" id="main-image-container">
                            <div id="input-main-img">
                                <div class="main-image-edit">click to edit</div>
                                <img id="main-image" src="/image/productImages/{{product.mainImage}}"
                                    alt="select main image">
                            </div>
                        </div>
                        <div class="form-group">
                            <div id="edit-sub-image-container">
                                {{#each product.itemSubImages}}
                                <div class="sub-image">
                                    <img id="add-sub-image" src="/image/productImages/{{this}}" alt="select main image">
                                </div>
                                {{/each}}
                                <div class="sub-image">
                                    <img id="add-sub-image"
                                        src="data:image/png;base64,"
                                        alt="select main image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="my-sec pb-4 pt-4">
                    <h5><strong>Category</strong></h5>
                    <div class="add-category-row form-row">
                        <div class="input-group col-md-6 mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-secondary" type="button" id="add-category">Add</button>
                            </div>
                            <input type="text" class="form-control" id="category-name" name="category"
                                placeholder="Add new category" aria-label="" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3 col-md-6">
                            <input type="text" class="form-control" placeholder="Search category" aria-label=""
                                aria-describedby="basic-addon1">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-secondary" type="button">Search</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-row my-category" id="category-collection">
                        <div class="form-check col-md-4 my-category-check">
                            <input class="form-check-input radio" checked type="radio" name="category" value=""
                                id="{{name}}">
                            <label class="form-check-label" for="{{product.category}}">
                                {{product.category}}
                            </label>
                        </div>
                        {{#each category}}
                        <div class="form-check col-md-4 my-category-check">
                            <input disabled class="form-check-input radio" type="radio" name="category" value=""
                                id="{{name}}">
                            <label class="form-check-label" for="{{name}}">
                                {{name}}
                            </label>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6 my-coll">
            <form>
                <div class="my-sec">
                    <h3><strong>ABOUT PRODUCT</strong></h3>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="product-name">Name</label>
                            <input type="text" class="form-control" disabled value="{{product.name}}" id="product-name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="price">Price</label>
                            <input type="text" class="form-control" disabled value="{{product.price}}" id="price">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <br>
                        <input class="form-control" type="text" name="discription" disabled
                            value="{{product.discription}}" id="description" cols="84" rows="3"></input>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="quantity">Quantity</label>
                            <input name="cound" type="number" class="form-control" disabled value="{{product.quantity}}"
                                id="quantity">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="discount">Discount</label>
                            <input name="discount" type="number" class="form-control" disabled
                                value="{{product.discount}}" id="discount">
                        </div>
                    </div>
                </div>
                {{!-- <div class="my-sec">add prodect for discount</div> --}}
                <div class="item-size-container my-sec">
                    <div class="form-check form-check-inline">
                        <h5 class="mb-1"><strong>Submit Data</strong></h5>
                    </div>
                    <div class="product-size-container">
                        <button type="button" class="btn btn-primary" id="edit">Edit</button>
                        <button type="button" id="submit-btn" class="btn btn-primary" disabled>Submit </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    const productName = document.getElementById('product-name')
    const price = document.getElementById('price')
    const description = document.getElementById('description')
    const quantity = document.getElementById('quantity')
    const discount = document.getElementById('discount')
    const submitBtn = document.getElementById('submit-btn')
    const category = document.getElementsByClassName('form-check-input')

    document.getElementById("edit").addEventListener("click", () => {
        productName.removeAttribute('disabled')
        price.removeAttribute('disabled')
        description.removeAttribute('disabled')
        quantity.removeAttribute('disabled')
        discount.removeAttribute('disabled')

        for(let i = 0;category.length > i;i++) {
            category[i].removeAttribute('disabled')
        }


        productName.addEventListener('keyup', activeteEditBtn)
        price.addEventListener('keyup', activeteEditBtn)
        description.addEventListener('keyup', activeteEditBtn)
        quantity.addEventListener('keyup', activeteEditBtn)
        discount.addEventListener('keyup', activeteEditBtn)

        function activeteEditBtn(e) {
            submitBtn.removeAttribute('disabled')
        }
    })
</script>