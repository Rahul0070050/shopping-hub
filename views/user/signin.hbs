<div class="row d-flex justify-content-center align-items-center admin-login-row">
    <div class="col-md-3">
        <form>
        <h2><strong>User Login</strong></h2>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" value="aloshy" onkeyup="validateUserName()" id="username" name="username" aria-describedby="emailHelp">
                <div id="usernameErr"></div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" value="aloshy" onkeyup="validatePassword()" id="password">
                <div id="passwordErr"></div>
            </div>
            <button onclick="return validateLoginForm(event)" type="submit" id="userLogin" class="btn btn-primary">Submit</button>
            <a href="/user/registration" class="my-3" style="color: blue;">I don't have an  accound</a>
        </form>
    </div>
</div>