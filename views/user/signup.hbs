    <div class="section">
        <div class="container">
            <div class="form">
                <div class="left-side d-flex justify-content-between flex-column signup-form-imag">
                    <div class="social mt-auto">
                        <ul class="social-icons">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                        <ul class="terms">
                            <li><a href="#">Terms</a></li>
                            <li><span class="dots"></span></li>
                            <li><a href="#">Services</a></li>
                        </ul>
                    </div>
                </div>
                <div class="right-side">
                    <div class="forms">
                        <h1 class="my-3"><strong>SIGN UP</strong></h1>
                        <div class="form-inputs">
                            <i class="fa fa-user"></i>
                            <input type="text" name="username" placeholder="username" class="form-control"
                                onkeyup="validateUserName()" id="username">
                            <p id="usernameErr"></p>
                        </div>
                        <div class="form-inputs">
                            <i class="fa fa-envelope"></i>
                            <input type="email" placeholder="email" class="form-control" name="email"
                                onkeyup="validateEmail()" id="email">
                            <p id="emailErr"></p>
                        </div>
                        <div class="form-inputs">
                            <i class="fa fa-mobile" id="password_eye"></i>
                            <input type="number" placeholder="mobile" class="form-control" name="phone"
                                onkeyup="validatePhoneNumber()" id="phone">
                            <p id="phoneErr"></p>
                        </div>
                        <div class="form-inputs">
                            <i class="fa fa-eye" id="password_eye"></i>
                            <input type="password" class="form-control" name="password" onkeyup="validatePassword()"
                                id="password">
                            <p id="passwordErr"></p>
                        </div>
                        <div class="form-inputs">
                            <input type="Password" name="cunfirmPassword" class="form-control"
                                onkeyup="validateCunfirnPassword()" id="cunfirm-password">
                            <p id="cunfirmPasswordErr"></p>
                            <i class="fa fa-eye" id="password_eye"></i>
                        </div>
                        <div class="submit-button">
                            <a href="/user/login">Already have an accound</a>
                            <button type="submit" onclick="return validateSignupForm(event)" id="userSignup"
                                class="float-right mr-4 btn btn-primary">
                                Sign up</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>